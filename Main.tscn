script/source = "extends Node2D

var playButtonTexture = preload(\"res://assets/play.png\")
var pauseButtonTexture = preload(\"res://assets/pause.png\")

func start():
	$EndedLayer.visible = false
	$StartLayer.visible = false
	$InfoLayer.visible = true
	$BackgroundAudioPlayer.play()
	$Player.reborn()
#	等待camera挪过来
	yield(get_tree().create_timer(0.1), \"timeout\")
	$Map.reset()
	$InfoLayer/TogglePauseButton.grab_focus()

func _on_StartButton_pressed():
	start()

func _on_Player_died():
	$InfoLayer.visible = false
	$EndedLayer/PointsLabel.text = $InfoLayer/PointsLabel.text
	$EndedLayer.visible = true
	$Map.stop()
	$BackgroundAudioPlayer.stop()

func _on_RestartButton_pressed():
	start()
	if get_tree().paused:
		# 从暂停重新开始，切回原状态
		_on_TogglePauseButton_pressed()

func _on_TogglePauseButton_pressed():
	get_tree().paused = !get_tree().paused
	$InfoLayer/TogglePauseButton.texture_normal = playButtonTexture if get_tree().paused else pauseButtonTexture
	$InfoLayer/RestartButton.visible = true if get_tree().paused else false
"

